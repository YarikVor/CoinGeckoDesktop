<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:userControls="clr-namespace:CoinGecko.UserControls">

    <Color x:Key="TextColor">DarkOrange</Color>

    <Style TargetType="userControls:IconMenu">
        <Setter Property="Color" Value="LightCyan" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="LightGray" />
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Background" Value="#222" />
    </Style>

    <!--Windows style-->
    <Brush x:Key="WindowBackground">#333</Brush>

    <Color x:Key="IconColor">#222</Color>

    <Brush x:Key="Navbar">#222</Brush>

    <Brush x:Key="ErrorBackground">DarkRed</Brush>
    <Brush x:Key="ErrorForeground">LightSalmon</Brush>

</ResourceDictionary>