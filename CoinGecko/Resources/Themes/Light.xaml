<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:userControls="clr-namespace:CoinGecko.UserControls">

    <Color x:Key="TextColor">DarkOrange</Color>

    <Style TargetType="userControls:IconMenu">
        <Setter Property="Color" Value="Black" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Background" Value="#eee" />
    </Style>

    <!--Windows style-->
    <Brush x:Key="WindowBackground">LightGray</Brush>

    <Color x:Key="IconColor">Black</Color>

    <Brush x:Key="Navbar">LightCyan</Brush>

    <Brush x:Key="ErrorBackground">LightSalmon</Brush>
    <Brush x:Key="ErrorForeground">DarkRed</Brush>

</ResourceDictionary>